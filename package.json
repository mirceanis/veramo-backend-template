{
  "name": "veramo-backend-template",
  "version": "1.0.0",
  "description": "A template for a nodejs typescript app that uses a veramo agent",
  "private": "true",
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "module": "lib/index.module.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:mirceanis/veramo-backend-template.git",
  "author": "Mircea Nistor",
  "license": "Apache-2.0",
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "build": "tsc",
    "local": "node --no-warnings --loader ts-node/esm src/issue-local-verify-local.ts",
    "remote": "node --no-warnings --loader ts-node/esm src/issue-remote-verify-local.ts",
    "server": "node --no-warnings --loader ts-node/esm src/server.ts",
    "format": "prettier -w '**/**.{js,ts,json,md,yml}'"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@jest/globals": "29.7.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "jest-config": "29.7.0",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@veramo/core": "^6.0.1-next",
    "@veramo/credential-w3c": "^6.0.1-next",
    "@veramo/data-store": "^6.0.1-next",
    "@veramo/did-comm": "^6.0.1-next",
    "@veramo/did-discovery": "^6.0.1-next",
    "@veramo/did-jwt": "^6.0.1-next",
    "@veramo/did-manager": "^6.0.1-next",
    "@veramo/did-provider-ethr": "^6.0.1-next",
    "@veramo/did-provider-key": "^6.0.1-next",
    "@veramo/did-provider-peer": "^6.0.1-next",
    "@veramo/did-provider-web": "^6.0.1-next",
    "@veramo/did-resolver": "^6.0.1-next",
    "@veramo/key-manager": "^6.0.1-next",
    "@veramo/kms-local": "^6.0.1-next",
    "@veramo/message-handler": "^6.0.1-next",
    "@veramo/remote-client": "^6.0.1-next",
    "@veramo/remote-server": "^6.0.1-next",
    "@veramo/selective-disclosure": "^6.0.1-next",
    "@veramo/url-handler": "^6.0.1-next",
    "did-jwt": "^8.0.0",
    "ethr-did-resolver": "^9.0.0",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "web-did-resolver": "^2.0.27"
  },
  "resolutions": {
    "jsonld": "npm:@digitalcredentials/jsonld@^6.0.0"
  }

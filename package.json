{
  "name": "veramo-backend-template",
  "version": "1.0.0",
  "description": "A template for a nodejs typescript app that uses a veramo agent",
  "private": "true",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "module": "lib/index.module.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:mirceanis/veramo-backend-template.git",
  "author": "Mircea Nistor",
  "license": "Apache-2.0",
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "prettier": "npx prettier -w '**/**.{js,ts,json,md,yml}'"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@types/jest": "29.2.2",
    "jest": "29.3.1",
    "prettier": "2.7.1",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "@veramo/core": "^4.3.1-next",
    "@veramo/credential-w3c": "^4.3.1-next",
    "@veramo/data-store": "^4.3.1-next",
    "@veramo/did-comm": "^4.3.1-next",
    "@veramo/did-discovery": "^4.3.1-next",
    "@veramo/did-jwt": "^4.3.1-next",
    "@veramo/did-manager": "^4.3.1-next",
    "@veramo/did-provider-ethr": "^4.3.1-next",
    "@veramo/did-provider-key": "^4.3.1-next",
    "@veramo/did-provider-web": "^4.3.1-next",
    "@veramo/did-resolver": "^4.3.1-next",
    "@veramo/key-manager": "^4.3.1-next",
    "@veramo/kms-local": "^4.3.1-next",
    "@veramo/message-handler": "^4.3.1-next",
    "@veramo/remote-client": "^4.3.1-next",
    "@veramo/remote-server": "^4.3.1-next",
    "@veramo/selective-disclosure": "^4.3.1-next",
    "@veramo/url-handler": "^4.3.1-next",
    "did-resolver": "^4.0.1",
    "ethr-did-resolver": "^8.0.0",
    "sqlite3": "^5.1.2",
    "web-did-resolver": "^2.0.21"
  }
}

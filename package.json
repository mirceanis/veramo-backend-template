{
  "name": "veramo-backend-template",
  "version": "1.0.0",
  "description": "A template for a nodejs typescript app that uses a veramo agent",
  "private": "true",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "module": "lib/index.module.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:mirceanis/veramo-backend-template.git",
  "author": "Mircea Nistor",
  "license": "Apache-2.0",
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "prettier": "npx prettier -w '**/**.{js,ts,json,md,yml}'"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "27.4.1",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@veramo/core": "^3.1.2-next",
    "@veramo/credential-w3c": "^3.1.2-next",
    "@veramo/data-store": "^3.1.2-next",
    "@veramo/did-comm": "^3.1.2-next",
    "@veramo/did-discovery": "^3.1.2-next",
    "@veramo/did-jwt": "^3.1.2-next",
    "@veramo/did-manager": "^3.1.2-next",
    "@veramo/did-provider-ethr": "^3.1.2-next",
    "@veramo/did-provider-key": "^3.1.2-next",
    "@veramo/did-provider-web": "^3.1.2-next",
    "@veramo/did-resolver": "^3.1.2-next",
    "@veramo/key-manager": "^3.1.2-next",
    "@veramo/kms-local": "^3.1.2-next",
    "@veramo/message-handler": "^3.1.2-next",
    "@veramo/remote-client": "^3.1.2-next",
    "@veramo/remote-server": "^3.1.2-next",
    "@veramo/selective-disclosure": "^3.1.2-next",
    "@veramo/url-handler": "^3.1.2-next",
    "did-resolver": "^3.1.0",
    "ethr-did-resolver": "^5.0.0",
    "sqlite3": "^5.0.2",
    "web-did-resolver": "^2.0.4"
  }
}
